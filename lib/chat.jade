template(name='chats')
    .ui.padded.stackable.grid
        .four.wide.column
            .ui.inline.header 
                |chat
                // if is_admin
                i.plus.circular.link.small.icon.add_chat
            +session_toggle key='admin_mode' icon='shield'
                
            .ui.input
                input(type='text' placeholder='search title...')
        .twelve.wide.column
            .ui.fluid.icon.input
                i.plus.icon
                input.new_message(type='text' placeholder='add message')
            .ui.six.doubling.centered.cards
                each chat_docs
                    +chat_message
        


