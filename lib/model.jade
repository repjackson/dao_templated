template(name='home')
    a.ui.massive.circular.basic.icon.button(href="/m/model")
        i.massive.yin.yang.icon
template(name='model_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .sixteen.wide.column
                    .ui.breadcrumb
                        a.section(href="/m/#{current_model}" title=current_model)
                            .ui.compact.button
                                |#{current_model.title}
                        .divider
                            i.chevron.right.icon
                        .active.section
                            if icon
                                +i name=icon
                                // i.icon(class=icon)
                            if title
                                |#{title}
                            else
                                | view #{model}
            .row
                .four.wide.column
                    // .ui.header
                    //     a.ui.icon.button(href="/m/#{model}" title=plural)
                    //         i.chevron.left.icon
                    //     |View #{model}
                    if can_edit
                        a.ui.fluid.button(href="/m/#{model}/#{_id}/edit")
                            i.pencil.icon
                            |edit
                    // each model.actions
                    //     +Template.dynamic template=this data=current_doc
                    // +user_list_toggle key='bookmark_ids' icon='bookmark' label='Bookmark' color='red'
                    // +creation_info
                .twelve.wide.column
                    .ui.header
                        each fields
                            if header
                                +Template.dynamic template=view_template 
                        // if icon
                        //     i.icon(class=icon)
                        // |#{title}
                    each fields
                        unless header
                            .item
                                +Template.dynamic template=view_template 
                    div
                    // +comments
        .ui.stackable.padded.grid
            .four.wide.column
                h1.ui.header #{title}
                .ui.icon.big.button.add_child(title="add #{slug}")
                    i.plus.icon
                a.ui.icon.big.button(href="/model/edit/#{_id}")
                    i.pencil.icon
                .ui.form
                    +text_view key='title'
                    +text_view key='slug'
                    +text_view key='icon'
                    +textarea_view key='description'
                    +array_view key='tags'
                //- +cloud filter=slug
            .twelve.wide.column
                //- .ui.header Fields
                //- each fields
                //-     .ui.divider
                //-     +field_view
                each model_docs
                    .ui.fluid.card
                        .content
                            +Template.dynamic template=model_doc
                            +array_view key='tags'
                            +edit_button
                            
                            
                            
template(name='model_edit_layout')
    // +nav
    with current_doc
        .ui.stackable.padded.grid            
            .centered.row
                .eight.wide.column
                    small editing model
                    .ui.inline.header
                        +i name=icon
                        // i.icon(class=icon)
                        |#{title}
                    div
                    |added #{when}
                    +print_this
                    div
                    a.ui.big.icon.pink.circular.button(href="/m/#{slug}")
                        i.big.checkmark.icon
                    i#delete_model.trash.red.circular.link.icon
                    .ui.divider
                    // +boolean_edit key='show_filter_bar' label='show filter bar' direct=true icon='filter'
                    // +boolean_edit key='show_facets' label='show facets' direct=true icon='diamond'
                    .ui.form
                        +text_edit key='title' label='title' direct=true
                        +text_edit key='slug' label='slug' direct=true
                        +icon_edit key='icon' label='icon' direct=true
                        +textarea_edit key='description' label='description' direct=true
                        +array_edit key='tags' label='tags' direct=true
                        //- +text_edit key='collection' label='collection' direct=true
                        // +key_value_set key='collection' value='docs' icon='document'
                        // +key_value_set key='collection' value='users' icon='users'
                .eight.wide.column
                    //- |#{model}
                    //- each fields
                    //-     +Template.dynamic template=edit_template 
                    //-     // .ui.header #{key} [#{field}] #{label}
                    .spacer
                    .ui.inline.header fields
                    .ui.icon.large.button.add_field
                        i.plus.icon
                    .spacer
                    .ui.segments
                        each fields
                            +field_edit
        
            

template(name='field_edit')
    .ui.segment.field_segment
        a.title.field_edit(href="#")
            |#{rank}
            if icon
                +i name=icon cl='ui mini inline image'
                //- i.icon(class=icon)
            .ui.inline.header #{title}
            .ui.label #{field_type}
            if faceted
                i.filter.icon(title='faceted')
            if sortable
                i.sort.amount.down.icon
            each view_roles
                .ui.basic.small.label #{this}
            //- .ui.icon.compact.button
            //-     i.up.caret.icon
            //- .ui.icon.compact.button
            //-     i.down.caret.icon
            if viewing_content    
                i.large.caret.down.icon
            else 
                i.large.caret.right.grey.icon
        if viewing_content
            .content
                +text_edit key='title' label='label' direct=true
                // +text_edit key='field_type' label='field type' direct=true
                +slug_edit key='key' label='key' direct=true
                +number_edit key='rank' label='rank' direct=true      
                +icon_edit key='icon' label='icon' direct=true       
                //- +textarea_edit key='description' label='description' direct=true
                .spacer
                // if in_dev
                +text_edit key='field_type' label='field type' direct=true
                +key_value_set key='field_type' value='text' icon='header'
                +key_value_set key='field_type' value='array' icon='list'
                +key_value_set key='field_type' value='boolean' icon='green toggle off'
                +key_value_set key='field_type' value='number' icon='blue hashtag'
                +key_value_set key='field_type' value='float' icon='blue hashtag'
                +key_value_set key='field_type' value='html' icon='code'
                +key_value_set key='field_type' value='textarea' icon='content'
                +key_value_set key='field_type' value='image' icon='picture'
                +key_value_set key='field_type' value='date' icon='calendar'
                +key_value_set key='field_type' value='time' icon='clock'
                +key_value_set key='field_type' value='link' icon='linkify'
                +key_value_set key='field_type' value='youtube' icon='video'
                +key_value_set key='field_type' value='color' icon='paint brush'
                +key_value_set key='field_type' value='single_doc' icon='clone'
                +key_value_set key='field_type' value='multi_doc' icon='clone'
                +key_value_set key='field_type' value='single_user' icon='clone'
                +key_value_set key='field_type' value='multi_user' icon='clone'
                if in_dev
                    i.large.code.icon
                    +single_doc_edit key='field_type' ref_model='field_type' label='field type' direct=true        
                    .spacer
                    // +text_edit key='field_type_id' label='field type id' direct=true        
                    // +single_doc_edit key='field_type_id' ref_model_slug='field_type' label='field type id' direct=true        
                    .spacer
                    +multi_doc_edit key='view_roles' ref_model_slug='role' label='view roles' direct=true icon='eye'          
                    .spacer
                    +multi_doc_edit key='edit_roles' ref_model_slug='role' label='edit roles' direct=true icon='pencil'        
                    +text_edit key='ref_model' label='reference model' direct=true
                .spacer
                +boolean_edit key='faceted' label='faceted' icon='diamond' direct=true
                +boolean_edit key='sortable' label='sortable' icon='chevron-down' direct=true
                .spacer
                if is_ref  
                    +single_doc_edit key='ref_model' ref_model_slug='model' label='reference model' direct=true
                else if is_user_ref
                    +single_doc_edit key='role_filter' ref_model_slug='role' label='role filter' direct=true
                div             
                +remove_button
                if is_admin
                    +print_this
