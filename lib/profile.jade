template(name='user_layout')
    +nav
    .ui.bottom.attached.pushable.segment
        +topbar
        +left_sidebar
        +right_sidebar
        with user_from_username_param
            .ui.stackable.padded.grid.global_conainer.pusher
                .row
                    //- img.ui.image.checkin_banner(src="{{c.url banner_image width=1000 height=1000 crop='crop'}}")
                    .four.wide.column
                        a.item.zoomer(href="/user/#{username}")
                            img.ui.centered.rounded.inline.small.image(src="{{c.url image_id height=300 width=300 gravity='face' crop='fill'}}")
                        // .spacer
                        a.ui.inline.header(href="/user/#{username}")
                            | #{username}
                        a.ui.inline.small.header.zoomer(href="/users")
                            strong
                                |#{current_user.points}
                            small
                                |current pts
                                span(title='rank') (##{current_user.point_rank})
                        .ui.inline.small.header
                            strong
                                |#{current_user.total_earned_credits}
                            small
                                |pts earned
                                span(title='rank') (##{current_user.total_earned_credit_rank})
                        .ui.inline.small.header
                            strong
                                |#{current_user.total_bought_credits}
                            small
                                |pts bought
                                span(title='rank') (##{current_user.total_bought_credit_rank})
                        if untappd_username
                            a.ui.inline.small.header(href="https://untappd.com/user/#{untappd_username}" target="_window")
                                |untappd profile: #{untappd.username}
                        .ui.large.label app: #{app}
                        div
                        .ui.inline.header roles:
                        each roles
                            .ui.basic.label #{this}
                        
                        if is_current_user
                            a.ui.basic.circular.icon.button.fly_up(href="/user/#{user_from_username_param.username}/edit" title='profile settings')
                                i.cog.large.icon
                        if is_current_user
                            .ui.basic.icon.button.logout.fly_down(title='log out')
                                i.sign.out.alternate.large.icon
                        unless is_current_user
                            +friend_button
                        if checkedin
                            .ui.large.green.label 
                                |checked in
                            .ui.small.button.check_out
                                |checkout
                        else 
                            .ui.button.check_in
                                |check in
                        // .twelve.wide.column
                        // a.ui.basic.button(href="/user/#{username}" class="{{isActiveRoute 'user_dashboard'}}")
                        //     i.dashboard.icon
                        //     |dashboard
                    .twelve.wide.column
                        a.ui.basic.compact.button(href="/user/#{username}/points" class="{{isActiveRoute 'user_points'}}")
                            // i.hashtag.icon
                            +i name='coins' cl='ui avatar image'
                            |points
                        // a.ui.basic.compact.button(href="/user/#{username}/work" class="{{isActiveRoute 'user_work'}}")
                        //     i.wrench.icon
                        //     |work
                        a.ui.basic.compact.button(href="/user/#{username}/groups" class="{{isActiveRoute 'user_groups'}}")
                            // i.users.icon
                            +i name='campfire' cl='ui avatar image'
                            |groups
                        a.ui.basic.compact.button(href="/user/#{username}/checkins" class="{{isActiveRoute 'user_checkins'}}")
                            // i.users.icon
                            +i name='campfire' cl='ui avatar image'
                            |checkins
                        a.ui.basic.compact.button(href="/user/#{username}/sent" class="{{isActiveRoute 'user_sent'}}")
                            // i.send.icon
                            +i name='sent' cl='ui avatar image'
                            |sent
                        a.ui.basic.compact.button(href="/user/#{username}/topups" class="{{isActiveRoute 'user_topups'}}")
                            // i.send.icon
                            +i name='donation' cl='ui avatar image'
                            |topups
                        a.ui.basic.compact.button(href="/user/#{username}/tasks" class="{{isActiveRoute 'user_tasks'}}")
                            +i name='tasks' cl='ui avatar image'
                            // i.tasks.icon
                            |tasks
                        a.ui.basic.compact.button(href="/user/#{username}/work" class="{{isActiveRoute 'user_work'}}")
                            +i name='services' cl='ui avatar image'
                            // i.work.icon
                            |work
                        a.ui.basic.compact.button(href="/user/#{username}/friends" class="{{isActiveRoute 'user_friends'}}")
                            +i name='groups' cl='ui avatar image'
                            // i.user.friends.icon
                            |friends
                        a.ui.basic.compact.button(href="/user/#{username}/rewards" class="{{isActiveRoute 'user_rewards'}}")
                            +i name='groups' cl='ui avatar image'
                            // i.user.rewards.icon
                            |rewards
                        a.ui.basic.compact.button(href="/user/#{username}/orders" class="{{isActiveRoute 'user_orders'}}")
                            // i.money.icon
                            +i name='money' cl='ui avatar image'
                            |orders
                        a.ui.basic.compact.button(href="/user/#{username}/stats" class="{{isActiveRoute 'user_stats'}}")
                            +i name='line-chart' cl='ui avatar image'
                            // i.money.icon
                            |stats
                        // a.ui.basic.button(href="/user/#{username}/payroll" class="{{isActiveRoute 'user_payroll'}}")
                        //     i.money.icon
                        //     |payroll
                        div.global_container
                            .spacer
                            +yield

        // if in_role 'admin'
        //     +admin_footer

template(name='inbox')
    .ui.header inbox
template(name='user_stats')
    
    .ui.header
        i.line.chart.icon
        |stats
    .ui.button.make_chart
        |make chart
    .ui.header total calories consumed #{currentUser.total_calories_consumed}
    .ui.header total calories consumed #{currentUser.total_earned_credit_rank}
    div(style="width:800px; height:500px;")
        canvas.chart(width="400" height="400")

template(name='user_friends')
    .ui.header
        i.user.friends.icon
        |user friends
    .ui.input
        input.add_friend_by_username(type='text' placeholder='add user by friend')
    .ui.header friend ids
    each currentUser.friend_ids 
        .ui.label #{this}
    .ui.header friend usernames
    each currentUser.friend_usernames 
        .ui.big.basic.label 
            i.remove.link.icon.remove_friend
            |#{this}
    each user_friend_docs
        .ui.big.button(href="/user/#{username}") #{username}

template(name='user_rewards')
    .ui.header 
        +i name='award'
        |user rewards
    each won_rewards
        .ui.card 
            .content
                if icon
                    i.massive.icon(class=icon)
                a.header(href="/reward/#{_id}")
                    i.green.checkmark.icon
                    |#{title}
                
    .ui.header non won rewards
    .ui.centered.cards
        each nonwon_rewards
            .ui.card 
                .content
                    if icon
                        i.massive.icon(class=icon)
                    a.header(href="/reward/#{_id}")
                        |#{title}
                

template(name='user_dashboard')
    with current_user
        .ui.two.column.stackable.grid
            .column
                .ui.header 
                    i.fire.icon
                    |groups
                .ui.link.selection.list
                    each member_groups
                        a.item(href="/group/#{_id}")
                            img.ui.avatar.image(src="{{c.url image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{title}
            .column
                .ui.header #{points} points
                .ui.inline.header 
                    +i name='shield'
                    |roles
                each roles
                    .ui.label #{this}
                .ui.header 
                    +i name='certificate'
                    |badges
                each user_badges
                    .ui.label #{this}
                
            .column
                unless is_current_user
                    .ui.button.send_points
                        |send points
                +user_requests
            .column
            
            
    
    
    
template(name='friend_button')
    if is_friend
        .ui.blue.button.unfriend
            // .visible.content
            |friends
            // .hidden.content
            //     i.minus.icon
    else 
        .ui.button.friend
            |+ friend
        
    
    
template(name='user_timeclock')
    .ui.header timeclock
    .ui.header status: 
        if current_user.clocked_in
            |clocked IN
        else 
            |clocked OUT
    unless current_user.clocked_in    
        .ui.button.clock_in
            |clock in
    if current_user.clocked_in
        .ui.button.clock_out
            |clock out
    each time_sessions
        |#{when}
        
        
template(name='user_tasks')
    .ui.header 
        +i name='tasks'
        |tasks
template(name='user_schedule')
    .ui.header 
        +i name='calendar'
        |schedule
template(name='user_chat')
    .ui.header 
        i.chat
        |chat 
    .ui.input 
        input.new_user_message(type='text' placeholder='new message...')
    .ui.list
        each user_chats
            .item #{body} by #{_author_username} #{when}
            
    .ui.header
        i.chat.outline.icon
        |chat
    .ui.input
        input.add_chat(type='text' placeholder='add chat')
    .ui.comments
        each chat_messages
            .comment
                .content
                    .ui.inline.header #{body}
                    .meta #{when}
                        |by 
                        a(href="/user/#{author.username}") #{author.first_name} #{author.last_name}
                        if currentUser
                            +voting_small
                            if can_edit
                                +remove_button
        
        
template(name='user_requests')  
    .ui.header
        i.bullhorn.icon
        |#{user_from_username_param.name} requests
template(name='user_groups')  
    .ui.header 
