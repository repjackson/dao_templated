template(name='post_item')
    .ui.item
        .content
            a.ui.header(href="/post/#{_id}")
                |#{title}
            |!{description}
            |!{body}
            a.ui.icon.big.button(href="/post/#{_id}")
                i.right.chevron.large.icon
            |#{points}points
            if in_dev 
                +print_this
            |#{when}, #{_author_username} 

template(name='post_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.header #{title}
                    a.ui.basic.large.button.fly_left(href="/posts")
                        i.chevron.left.icon
                        +i name='invoice' cl='ui avatar image'
                        |posts
                    // .ui.segment 
                    //     with post_product
                    //         a(href="/product/#{_id}")
                    //             img.ui.rounded.image(src="{{c.url image_id width=400 height=400}}")
                    //         a.ui.header(href="/product/#{_id}") #{title}
                    //         // - .ui.header #{cook_tip} cook tip
                    //         // .ui.header $#{post_total_transaction_amount} 
                    //         //     small total transaction amount
                    div
                    .ui.inline.header 
                        i.clock.icon
                        small started
                        strong #{when}
                        small by
                        strong #{_author_username}
                    with buyer
                        +user_card
                    if is_admin
                        +print_this
                    .ui.grey.header 
                        i.eye.icon
                        |viewers
                    .ui.small.button.mark_viewed
                        |mark viewed
                    each view_events
                        .item 
                            |#{username} {{from_now view_timestamp}}
                    .ui.header model: #{model}
                .ten.wide.column
                    .f12
                        |!{description}
                        |!{body}
                    if image_url
                        +image_link_view key='image_url' direct=true
                    if image_id
                        +image_view key='image_id' direct=true 
                    if youtube_id
                        +youtube_view key='image_id' direct=true
                
                    if is_admin
                        .ui.small.compact.button.delete_post
                            i.remove.icon
                            |delete
                    .ui.hidden.divider
                    if can_edit
                        a.ui.icon.large.basic.button(href="/post/#{_id}/edit")
                            i.pencil.large.icon
                    +comments
                    +print_this
                    +voting_full
                    +tips
                    
                    
                    
