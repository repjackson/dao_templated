template(name='home')
    if logging_in
        .ui.center.aligned.basic.segment
            i.huge.loading.food.grey.icon
    else
        .ui.padded.stackable.grid
            .sixteen.wide.column
                // unless current_post
                // unless subs_ready
                //     .ui.center.aligned.basic.segment
                //         i.massive.grey.food.loading.icon
                each picked_tags
                    +unpick_tag
                if subs_ready
                    if tag_results
                        each tag_results
                            +tag_picker
                .ui.hidden.divider
                unless subs_ready
                    .ui.center.aligned.basic.segment
                        i.massive.grey.food.loading.icon
                else 
                    if current_post
                        with current_post
                            +home_item
                    else if one_doc
                        .ui.fluid.cards.scrollin.smallscroll
                            each home_items
                                +home_item
                    else if two_docs
                        .ui.stackable.two.cards.scrollin.smallscroll
                            each home_items
                                +home_item
                    else 
                        .ui.stackable.five.centered.cards.scrollin.smallscroll
                            each home_items
                                +home_item
            .sixteen.wide.column
                +inventory
                +sales
                +checkins
                +menu
                +orders
