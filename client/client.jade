template(name='layout')
    +nav
    if logging_in
        .ui.center.aligned.basic.segment
            i.massive.loading.yin.yang.grey.icon
    else
        +yield
    if in_dev
        +admin_footer
      
template(name='fullscreen')
    +yield
    if in_dev
        +admin_footer
      

      
template(name='admin_footer')
    .ui.fluid.inverted.segment
        .ui.inline.header 
            i.shield.icon
            |admin footer
        .ui.inline.header #{docs.count} docs
        .ui.inline.header #{users.count} users
        .ui.stackable.padded.grid
            .five.wide.column
                .ui.small.inverted.list.smallscroll
                    each docs
                        .item 
                            .content 
                                .header
                                    |#{title} 
                                .ui.blue.label
                                    |#{model}
                                |#{when} #{_author_username} 
                                .ui.label #{app}
                                +print_this
            .five.wide.column
                .ui.small.inverted.list.smallscroll
                    each users
                        .item 
                            .content 
                                .header
                                    |#{username} 
                                +print_this
                                a.ui.icon.button(href="/user/#{_id}/edit")
                                    i.pencil.icon
                                i.remove.link.icon.delete_user
            .five.wide.column
                .ui.inline.inverted.header #{results.count} results
                .ui.small.inverted.list.smallscroll
                    each results
                        .item 
                            .content 
                                .header
                                    |#{title} 
                                .ui.label model:#{model}
                                +print_this
      
      
      
      




template(name='not_found')
    .ui.center.aligned.basic.segment
