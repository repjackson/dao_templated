template(name='login')
    .ui.stackable.grid
        .centered.row
            .six.wide.center.aligned.column
                if is_logging_in
                    i.massive.loading.yin.yang.slice.icon
                else 
                    i.massive.yin.yang.slice.icon
                .ui.center.aligned.header login
                .ui.hidden.divider
                .ui.inline.small.header 
                    i.user.outline.icon
                    |username
                .ui.fluid.large.input(class=enter_class)
                    input.username(type='text')
                .spacer
                .ui.inline.small.header 
                    i.lock.icon
                    | password
                .ui.fluid.large.input(class=enter_class)
                    input.password(type='password')
                .ui.hidden.divider
                .ui.fluid.big.basic.button.enter(title="login #{username}" class=enter_class)
                    i.sign.in.alternate.icon
                    |login
                    strong #{username}
                .ui.center.aligned.basic.segment    
                    a.ui.basic.button(href='/register')
                        i.plus.icon
                        |register
                    // a.ui.basic.button(href='/forgot_password')
                    //     i.refresh.icon
                    //     |forgot password
