template(name='inventory')
    .ui.header 
        i.list.icon
        |inventory
    .ui.list
        each inventory_docs
            .item #{title}


template(name='sales')
    .ui.header 
        i.money.icon
        |sales
    .ui.list
        each sales_docs
            .item #{title}
            
            
template(name='menu')
    a.ui.header(href="/menu")
        i.food.icon
        |menu
    .ui.two.column.stackable.grid
        .column
            .ui.small.header 
                i.food.icon
                |food
            .ui.selection.link.list
                each food_items
                    a.item(href="/menu/#{_id}") #{title}
        .column
            .ui.small.header 
                i.beer.icon
                |drinks
            .ui.selection.link.list
                each drinks
                    a.item(href="/menu/#{_id}") #{title}
            
            
template(name='loss')
    a.ui.header(href="/loss") 
        i.frown.icon
        |loss
template(name='orders')
    a.ui.header(href="/orders") 
        i.cart.icon
        |orders
    
    
    

                        



